<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        card_view:cardElevation="2dp"
        card_view:contentPadding="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="2dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/iv_portrait"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <ImageView
                android:id="@+id/iv_sum1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/iv_portrait"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/iv_sum2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/iv_portrait"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_sum1" />

            <TextView
                android:id="@+id/tv_type_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_portrait"
                android:text="RANKED SOLO 5x5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_type_match"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_portrait"
                android:text="Level 18" />

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_level"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_portrait"
                android:src="@drawable/gold" />

            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_gold"
                android:layout_toRightOf="@+id/iv_gold"
                android:text="15K" />

            <ImageView
                android:id="@+id/iv_cs"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_level"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_gold"
                android:src="@drawable/minion" />

            <TextView
                android:id="@+id/tv_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_cs"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_cs"
                android:text="168" />

            <ImageView
                android:id="@+id/iv_kda"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_level"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_cs"
                android:src="@drawable/kda" />

            <TextView
                android:id="@+id/tv_kda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_kda"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_kda"
                android:text="16/8/5" />

            <ImageView
                android:id="@+id/iv_item1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_sum2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_sum2"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_item1"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_item1"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item3"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_item2"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_item2"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item4"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_item3"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_item3"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item5"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_item4"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_item4"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item6"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/iv_item5"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/iv_item5"
                android:background="@drawable/no_item" />

            <ImageView
                android:id="@+id/iv_item7"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@+id/iv_item6"
                android:layout_alignParentEnd="true"
                android:background="@drawable/no_item"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignTop="@+id/iv_portrait"
                android:text="12:35"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_duration"
                android:layout_alignParentEnd="true"
                android:text="28/05/15" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/exercice_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>